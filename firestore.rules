rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Loans collection - users can only read/write their own loans
    match /loans/{loanId} {
      // Allow create if authenticated and user sets themselves as owner
      allow create: if request.auth != null && 
                      request.auth.uid == request.resource.data.userId;
      
      // Allow read if the user owns this loan
      allow read: if request.auth != null && 
                     request.auth.uid == resource.data.userId;
      
      // Allow update and delete if the user owns this loan
      allow update, delete: if request.auth != null && 
                               request.auth.uid == resource.data.userId;
    }
  }
}
